    <style name="CustomDialog.Grid" parent="CustomDialog">
        <item name="android:windowBackground">@color/colorf9</item>
    </style>
      
     <style name="CustomDialog.Animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="CustomDialog.Animation2" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/up_in</item>
        <item name="android:windowExitAnimation">@anim/up_out</item>
    </style>
    
    <style name="CustomDialog.SecAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/pull_down_in</item>
        <item name="android:windowExitAnimation">@anim/pull_down_out</item>
    </style>
     
    <style name="CustomDialog.SecTags" parent="CustomDialog">
          <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/color_sec_tags_bg</item>
        <item name="android:windowAnimationStyle">@style/CustomDialog.SecAnimation</item>

    </style>
     <style name="CustomDialog.SecWant" parent="CustomDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
     <style name="CustomDialog.Success" parent="CustomDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_white_rounded</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
     <style name="CustomDialog.Menu" parent="CustomDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/color_sec_tags_bg</item>
      </style>
    <style name="CustomDialog.Share" parent="CustomDialog">
        <item name="android:windowBackground">@color/color_sec_tags_bg</item>
    </style>

    <style name="CustomDialog.CcmAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_inccm</item>
        <item name="android:windowExitAnimation">@anim/push_up_outccm</item>
    </style>
