<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120">
    <TextView
        android:id="@+id/mRankNo"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="第一名"
        android:textColor="@color/c9"
        android:layout_marginLeft="@dimen/dimen_10"
        />
    <LinearLayout
        android:weightSum="7"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/tv_sock"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="胜负场次：3胜0负"
            />
        <TextView
            android:id="@+id/tv_clearsocker"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="净胜分：19分"
            />
        <View
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@color/gb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            />
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >
            <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                android:id="@+id/cv_commhead"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:background="@drawable/me_ic_head"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="sfsadff"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
