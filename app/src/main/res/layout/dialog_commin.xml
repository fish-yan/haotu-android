<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:background="@drawable/shap_conner_whit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_notcont"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:text="您已申请成功!\n请切换身份发布活动~"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/gb"
            />
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70"
            android:orientation="horizontal"

            >
        <TextView
            android:id="@+id/tv_changeident"
           android:layout_weight="1"
            android:textSize="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_20"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/indicator_selected_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换身份"
            />
            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:background="@color/gb"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_toinfo"
                android:textSize="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/indicator_selected_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看俱乐部"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_tit"
        android:background="@drawable/shap_shopwhit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="运动物料清单"
            android:textColor="@color/black"
            android:textSize="14dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gb" />
    </LinearLayout>


    <ListView
        android:visibility="gone"
        android:layout_above="@+id/ll_botm"
        android:layout_below="@+id/ll_tit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_shop"
        />

    <LinearLayout
        android:visibility="gone"
        android:background="@color/gb"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_botm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:visibility="gone"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="30dp"
            />
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textColor="@color/black"
            />


        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计:"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/main_color"
            />
        <TextView
            android:id="@+id/alltv_price"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33"
            android:textColor="@color/main_color"
            />
        <Button
            android:visibility="gone"
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="已选2件，提交"
            android:background="@drawable/shape_tailor_sure"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"/>
    </LinearLayout>

</RelativeLayout>