<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="旗下品牌"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@color/color_text_02"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:id="@+id/iv_band"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/shape_divide_up"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:id="@+id/ll_syntheticals"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            >
            <TextView
                android:drawablePadding="-40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/home_lab"
                android:text="综合"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/screen_ic_up_orange"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_votes"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            >
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/color_999999"
                android:text="销量"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:drawablePadding="-40dp"
                android:drawableRight="@drawable/screen_ic_down_gray"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_rocords"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            >
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/color_999999"
                android:text="记录"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:drawablePadding="-40dp"
                android:drawableRight="@drawable/screen_ic_down_gray"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_filters"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            >
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/color_999999"
                android:text="筛选"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                />
            <ImageView
                android:layout_marginLeft="-15dp"
                android:layout_marginRight="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/screen_ic_gray"
                />
        </LinearLayout>
    </LinearLayout>

    <com.dmeyc.dmestoreyfm.wedgit.ScreenView
        android:visibility="gone"
        android:id="@+id/screen_view"
        android:layout_width="match_parent"
        android:layout_height="136.5dp"
        android:layout_marginLeft="20dp"/>
</LinearLayout>
