<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ll_pk_item"
    android:background="@color/gwhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/shap_conner_whit"
        >
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >
            <TextView
                android:id="@+id/tv_cubnam"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="耐克杯羽毛球比赛"
                android:textColor="@color/black"
                />
            <ImageView

                android:layout_gravity="right"
                android:id="@+id/iv_left"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:background="@drawable/progourd"

                />
                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="right"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:background="@drawable/progourd"
                        />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_adress"
                android:textSize="10dp"
                android:textColor="@color/gray"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点：上海市闵行区"
                />
            <TextView
                android:id="@+id/tv_pktime"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间：2019年3月01日  18:00-20:00"
                />
            <View
                android:layout_marginTop="10dp"
                android:background="@color/gwhite"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/iv_teamone"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/pk_teamone"
                    />
                <TextView
                    android:id="@+id/tv_teamonename"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="飞翔羽毛球俱乐部"
                    />
                <TextView
                    android:id="@+id/tv_teanmoneperson"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20人"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_gravity="center"
                   android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/pk_iocn"
                    />
                <TextView
                    android:id="@+id/tv_suppoutname"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/indicator_selected_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="NIKE赞助"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/iv_teamtwo"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/pk_teamtwo"
                    />
                <TextView
                    android:id="@+id/tv_teantwonaem"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="飞翔羽毛球俱乐部"
                    />
                <TextView
                    android:id="@+id/tv_teantwoperson"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20人"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout

        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_roundiv"
            android:layout_width="33dp"
            android:layout_height="33dp"
            app:riv_corner_radius="16.5dp"
            android:src="@drawable/favicon" />
        <TextView
            android:id="@+id/item_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_roundiv"
            android:textSize="12sp"
            android:textColor="@color/color_1a1a1a"
            tools:text="萌萌"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"/>
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/item_tv_content"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_1a1a1a"
        tools:text="很修身 设计感很好 显瘦"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
