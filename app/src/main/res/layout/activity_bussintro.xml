<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <View
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <!--?attr/actionBarSize-->
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gray_back"/>
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_left_title_bar"
            android:layout_centerHorizontal="true"
            android:text="商户介绍"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_20" />
        <TextView
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:textColor="@color/indicator_selected_color"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_right_title_bar"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/camar_iocn"
            android:paddingLeft="15dp"
            android:paddingRight="20dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="@color/gb"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
        android:paddingTop="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/shap_whit"
        >
        <EditText
            android:maxLength="2000"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="top"
            android:textSize="@dimen/dimen_14"
            android:id="@+id/et_backtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入您的群简介"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_textnum"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/200"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    </ScrollView>
    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/rl_pic"
        />
    <Button
        android:id="@+id/btn_next"
        android:layout_marginBottom="20dp"
        android:layout_width="@dimen/dimen_180"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="下一步"
        android:alpha="0.5"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_tailor_sure"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>