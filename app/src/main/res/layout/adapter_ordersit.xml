<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/ll_orderset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_set1"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:background="@drawable/set_rabbit"
                />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_set1"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_set1name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_set1"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="ss"
                    android:textSize="@dimen/dimen_10" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_setsex1"
                android:layout_marginLeft="2dp"
                android:layout_width="@dimen/dimen_10"
                android:layout_height="10dp"
                android:background="@drawable/set_woman"
                />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_set2"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:background="@drawable/set_rabbit"
                />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_set2"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_below="@+id/iv_set2"
                android:id="@+id/tv_set2name"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ss"
                android:textSize="@dimen/dimen_10"
                />
                <ImageView
                    android:paddingRight="5dp"
                    android:visibility="gone"
                    android:id="@+id/iv_setsex2"
                    android:layout_marginLeft="2dp"
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="10dp"
                    android:background="@drawable/set_woman"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>