<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:civ_left_hint_str="请输入活动主题"
                app:civ_type="5" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入活动时间"
                app:civ_type="8" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入活动地点"
                app:civ_type="5" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_person_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_input_type="number"
                app:civ_left_hint_str="请输入可参与人数"
                app:civ_type="5" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入活动费用"
                app:civ_input_type="number_decimal"
                app:civ_type="5" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_input_type="number_decimal"
                app:civ_left_hint_str="请输入女士优惠金额（非必填）"
                app:civ_type="5" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                app:civ_type="8"
                android:id="@+id/civ_action_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请选择活动类型" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                app:civ_type="8"
                android:id="@+id/civ_addr_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请选择固定活动/临时活动" />

            <EditText
                android:id="@+id/et_instruction"
                android:layout_width="match_parent"
                android:layout_height="285.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请输入活动介绍"
                android:padding="22.5dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>