<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/indicator_selected_color"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_itemtile"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="航空牌国际比赛用鹅毛球"
                    />
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/c9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:textSize="16dp"
                    android:textColor="@color/c9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="108/桶"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_band"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="品牌：航空"
                    />
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X12"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_size"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格：12只/桶"
                    />
                <LinearLayout

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/shap_rech"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_contreduce"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="—"
                        android:textSize="18dp"
                        android:textColor="@color/indicator_selected_color"
                        />
                    <View
                        android:layout_width="@dimen/dimen_1"
                        android:layout_height="match_parent"
                        android:background="@color/gb"
                        />
                    <EditText
                        android:id="@+id/et_number"
                        android:inputType="number"
                        android:background="@null"
                        android:gravity="center"
                        android:maxLength="2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        />
                    <View
                        android:layout_width="@dimen/dimen_1"
                        android:layout_height="match_parent"
                        android:background="@color/gb"
                        />
                    <TextView
                        android:id="@+id/tv_counpluse"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textColor="@color/indicator_selected_color"
                        android:textSize="18dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>