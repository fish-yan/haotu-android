<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单次适合混合打双打和双打"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="11"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_18"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="资深教练一对一教学陪练，陪练"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="11"
            android:textSize="@dimen/dimen_14"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="资深教练一对一教学陪练，陪练"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="11"
            android:textSize="@dimen/dimen_14"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="资深教练一对一教学陪练，陪练"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="11"
            android:textSize="@dimen/dimen_14"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

<LinearLayout
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/indicator_selected_color"
            />
        <TextView
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="399"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/indicator_selected_color"
            />

</LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />
            <TextView
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_orang_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="499"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_gobuy"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:background="@drawable/shap_conner_orange"
            android:textSize="@dimen/dimen_16"
           android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即购买"
            />
    </LinearLayout>


</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gb"
        />
</LinearLayout>