<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gb"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <LinearLayout
        android:id="@+id/ll_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:src="@drawable/gray_back"/>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dimen_30"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/civ_avatar"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/me_ic_head"
                />
            <ImageView
                android:id="@+id/iv_bluefire"
                android:layout_toRightOf="@+id/civ_avatar"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_10"
                android:background="@drawable/blue_fire"
                />
            <LinearLayout
                android:layout_toRightOf="@+id/iv_bluefire"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_17"
                android:background="@drawable/powe_kuang"
                >

                <TextView
                    android:id="@+id/tv_batnumber"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/indicator_selected_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500"
                    />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
android:visibility="gone"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_iconmore"/>
    </LinearLayout>

    <TextView
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dimen_5"
        android:id="@+id/tv_commname"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:text="上海羽毛球俱乐部"
        />

    <!--<View-->
    <!--android:layout_marginTop="@dimen/dimen_3"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/gwhite"/>-->
    <LinearLayout
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_power"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="战斗力 580"
            />
        <View
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/tv_actioncount"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活跃度 580"
            />


        <View
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gwhite"/>

        <TextView
            android:id="@+id/tv_follownum"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="加关注 580"
            />
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlPrimaryColor="#afff"
        app:srlAccentColor="@color/color_1a1a1a"
        app:srlEnableLoadmore="true"
        app:srlEnableHeaderTranslationContent="true"
        >
        <com.scwang.smartrefresh.header.StoreHouseHeader
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:shhText="HOT.U"
            app:shhLineWidth="2dp"/>
        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:background="@color/gb"-->
        <!--android:id="@+id/recycleview_pking"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars="none"/>-->
        <ListView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:scrollbars="none"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_pkinglist"
            />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>