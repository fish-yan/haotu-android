    <View
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <LinearLayout
        android:id="@+id/ll_heand"
        android:layout_below="@+id/status_view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:src="@drawable/gray_back"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_gravity="center"
                android:id="@+id/civ_avatar"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:background="@drawable/me_ic_head"
                />

            <ImageView
                android:id="@+id/iv_bluefire"
                android:layout_toRightOf="@+id/civ_avatar"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_10"
                android:background="@drawable/blue_fire"
                />
            <LinearLayout
                android:gravity="center"
                android:layout_toRightOf="@+id/iv_bluefire"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_17"
                android:background="@drawable/powe_kuang"
                >

                <TextView
                    android:id="@+id/tv_ballnum"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/indicator_selected_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_iconmore"/>
