    <LinearLayout
        android:layout_below="@+id/view_linews2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gwhite"/>
        <LinearLayout
            android:id="@+id/ll_infros"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/dimen_13"
                    android:text="活动名称" />
                <TextView
                    android:maxWidth="300dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:id="@+id/tv_activityname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="上海交通大学飞翔羽毛球俱乐部"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gwhite"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/dimen_13"
                    android:text="活动时间" />
                <TextView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="2019年03月28日 18：00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gwhite"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/dimen_13"
                    android:text="场地" />
                <TextView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="黄兴公园羽毛球场"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gwhite"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/dimen_13"
                    android:text="地址" />
                <TextView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:id="@+id/tv_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="上海市杨浦区国定东路275-8号1312室"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gwhite"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/dimen_13"
                    android:text="发起人" />
                <TextView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:id="@+id/tv_leader"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="好兔官方   435435435"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gwhite"/>
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dimen_10"
            android:id="@+id/tv_rule"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16" />
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dimen_10"
            android:id="@+id/adword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16" />
    </LinearLayout>




    <LinearLayout
        android:layout_marginBottom="@dimen/dimen_5"
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="他们已报名:"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_gravity="center_vertical"
            android:id="@+id/rv_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_weight="1"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tochanlage"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:text="报名"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shap_redcicle"
        />
</RelativeLayout>