<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
    android:visibility="gone"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    >
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="全部（4）"
    android:layout_marginLeft="20dp"
    android:textColor="@color/indicator_selected_color"
    />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="五角场大学路店（4）"
    android:layout_marginLeft="20dp"
    android:textColor="@color/black"
    />
    </LinearLayout>

    <LinearLayout
    android:layout_marginTop="10dp"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    >
    <!--<LinearLayout-->
    <!--android:layout_weight="1"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="horizontal"-->
    <!--&gt;-->
    <ImageView
        android:id="@+id/iv_headteach"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_width="@dimen/dimen_80"
    android:layout_height="80dp"
    android:background="@drawable/action_item"
    />
    <LinearLayout
    android:layout_marginLeft="10dp"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
    android:gravity="center"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/tv_teach_name"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="单次适合混合双打混合双打"
    android:textColor="@color/black"
    android:textSize="16dp"
    android:textStyle="bold"
    android:ellipsize="end"
    android:maxLength="10"
    />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="￥"
    android:textSize="10dp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:textColor="@color/indicator_selected_color"
    />
    <TextView
        android:id="@+id/tv_price"
    android:layout_marginRight="10dp"
    android:textSize="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="399"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:textColor="@color/indicator_selected_color"
    />
    </LinearLayout>
    <LinearLayout
    android:gravity="center"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_sellnum"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="已售28件"
    />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="￥"
    android:textSize="10dp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    />
    <TextView

    android:textSize="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/tv_orang_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="499"
    />

    </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gb"
        android:layout_marginLeft="40dp"
        />
</LinearLayout>