<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_marginTop="@dimen/dimen_10"
    android:layout_marginLeft="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="@color/gb"
        />
    <LinearLayout
        android:background="@drawable/shap_white_littleconner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_140"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:textSize="@dimen/dimen_18"
                    android:textStyle="bold"
                    android:id="@+id/tv_cubnam"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="耐克杯羽毛球比赛"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:id="@+id/iv_left"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/progourd"
                    />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_right"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="right"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/progourd"
                    />
            </LinearLayout>
            <View
                android:background="@color/gb"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                    android:id="@+id/iv_teamone"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/rc_dimen_size_44"
                    android:layout_height="@dimen/rc_dimen_size_44"
                    android:background="@drawable/me_ic_head"
                    />
                <TextView
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/dimen_200"
                    android:id="@+id/tv_teamonename"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="中羽联"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/item_tv_date"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5月29日"
                    />
                <TextView
                    android:id="@+id/tv_socker"
                    android:textSize="@dimen/dimen_24"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/indicator_selected_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2 ：0"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_suppoutname"
                    android:textSize="12dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5月29日"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                    android:id="@+id/iv_teamtwo"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/rc_dimen_size_44"
                    android:layout_height="@dimen/rc_dimen_size_44"
                    android:background="@drawable/me_ic_head"
                    />
                <TextView
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/dimen_200"
                    android:id="@+id/tv_teantwonaem"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="好图"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>