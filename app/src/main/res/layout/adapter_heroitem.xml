<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_marginTop="@dimen/dimen_10"
    android:layout_marginLeft="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="@color/gb"
        />
    <LinearLayout
        android:background="@drawable/shap_white_littleconner"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80"
            android:orientation="horizontal"
            >

                <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:id="@+id/iv_teamone"
                    android:layout_gravity="center"
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:background="@drawable/me_ic_head"
                    />

                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/dimen_250"
                    android:id="@+id/tv_date"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen_18"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5月29日"
                    />
                <TextView
                    android:layout_marginRight="@dimen/dimen_2"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_teampower"
                    android:textSize="@dimen/dimen_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="500"
                    android:textColor="#FF5151"
                    />
         <ImageView
             android:layout_marginRight="@dimen/dimen_10"
             android:layout_gravity="center_vertical"
             android:layout_width="12dp"
             android:layout_height="12dp"
             android:background="@drawable/pk_filre"
             />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gb"
           />
        <LinearLayout
            android:layout_weight="1"
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_marginRight="10dp"
                  android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tv_ranknum"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_60"
                    android:textColor="@color/home_lab"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:layout_marginBottom="@dimen/dimen_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tv_won_rank"
                    android:layout_weight="2"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginTop="5dp"
                    android:textColor="#FF5151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="胜率： 100%"
                    />
                <TextView
                    android:id="@+id/tv_des"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="#B1B1B1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="已经连续三周参与pk赛挑战，获得很不错的成绩"
                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>