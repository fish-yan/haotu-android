<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_marginTop="@dimen/dimen_10"
    android:layout_marginLeft="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_10"
    android:layout_width="match_parent"
    android:layout_height="127dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="@color/gb"
        />
    <LinearLayout
        android:background="@drawable/shap_white_littleconner"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_weight="1"

            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                android:layout_marginLeft="@dimen/dimen_10"
                android:id="@+id/iv_teamone"
                android:layout_gravity="center"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:background="@drawable/me_ic_head"
                />

            <TextView
                android:maxWidth="@dimen/dimen_250"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/tv_teanmane"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_18"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="爱丽丝羽毛球俱乐部"
                />
            <TextView
                android:layout_marginRight="@dimen/dimen_2"
                android:gravity="center_vertical"
                android:id="@+id/tv_pksorce"
                android:textSize="@dimen/dimen_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="15比14"
                android:textColor="@color/indicator_selected_color"
                />

            <ImageView
                android:id="@+id/iv_worn"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_5"
                android:background="@drawable/pkdetail_won" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gb"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!--<LinearLayout-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:orientation="vertical"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--&gt;-->

                <!--&lt;!&ndash;<TextView&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_width="wrap_content"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_height="match_parent"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_gravity="center_vertical"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:gravity="center_vertical"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:text="1"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:textColor="@color/home_lab"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:textSize="@dimen/dimen_60"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:textStyle="bold" />&ndash;&gt;-->
            <!--</LinearLayout>-->
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_10"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/adree_location"
                        />
                    <TextView
                        android:id="@+id/tv_adress"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="2"
                        android:textSize="@dimen/dimen_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="黄兴公园体育馆"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/action_timeicon"
                        />
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="2"
                        android:textSize="@dimen/dimen_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="2019年05月30日"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>