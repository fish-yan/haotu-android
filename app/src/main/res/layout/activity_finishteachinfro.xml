<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <!--?attr/actionBarSize-->
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gray_back"/>
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完善教练信息"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_20" />
        <TextView
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:textColor="@color/indicator_selected_color"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="20dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="@color/gb"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:visibility="gone"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_personinfro"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="请上传教练头像"
                    android:textSize="@dimen/dimen_17"
                    android:textColor="@color/black"
                    />
                <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                    android:id="@+id/cv_teacheheader"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@drawable/me_ic_head"
                    android:layout_marginRight="@dimen/dimen_10"
                    />
                <ImageView
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/mine_arrow"
                    />
            </LinearLayout>
            <View
                android:background="@color/gb"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:background="@color/white"
                android:id="@+id/ll_sex"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入您的姓名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/et_teachinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="请选择性别"
                    android:textColor="@color/gray"
                    android:textColorHint="#DFE0E1"
                    android:textSize="@dimen/dimen_17"
                    />
                <ImageView
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/mine_arrow"
                    />
            </LinearLayout>

            <View
                android:visibility="gone"
                android:background="@color/gb"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:visibility="gone"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入您的姓名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/et_teachname"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入姓名"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_17"

                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/gray"
                    android:layout_gravity="center"
                    />
                <!--android:textColorHint="#DFE0E1"-->
            </LinearLayout>
            <View
                android:background="@color/gb"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入您的姓名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <EditText
                    android:inputType="number"
                    android:id="@+id/et_teachage"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入年龄"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_17"
                    android:textColorHint="@color/gray"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    />
                <!--android:textColorHint="#DFE0E1"-->
            </LinearLayout>
            <View
                android:background="@color/gb"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/ll_Education"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入您的姓名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_educationback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="请填写您的教育背景"
                    android:textColor="@color/gray"
                    android:textColorHint="#DFE0E1"
                    android:textSize="@dimen/dimen_17"
                    />
                <ImageView
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/mine_arrow"
                    />
            </LinearLayout>
            <View
                android:background="@color/gb"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/ll_intro"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入您的姓名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_inro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="请填写您的个人简介"
                    android:textColor="@color/gray"
                    android:textColorHint="#DFE0E1"
                    android:textSize="@dimen/dimen_17"
                    />
                <ImageView
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/mine_arrow"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:orientation="vertical"
                android:background="@color/gb"
                >
                <Button
                    android:id="@+id/btn_next"
                    android:layout_marginBottom="20dp"
                    android:layout_width="@dimen/dimen_180"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:text="完成"
                    android:alpha="0.5"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_tailor_sure"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>