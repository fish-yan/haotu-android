<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_course_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入课程主题"
                app:civ_type="2" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_person_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入上课人数"
                app:civ_input_type="number"
                app:civ_type="2" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入课程费用"
                app:civ_input_type="number_decimal"
                app:civ_type="2" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入上课地址"
                app:civ_type="2" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请选择上课时间"
                app:civ_type="8" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请选择课程有效期"
                app:civ_type="8" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入课程标签,多个请用逗号分开"
                app:civ_type="2" />

            <EditText
                android:id="@+id/et_instruction"
                style="@style/editText_instruction"
                android:hint="请输入课程介绍" />

            <com.dmeyc.dmestoreyfm.wedgit.UploadPictureView
                android:id="@+id/uploadPictureView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_404040"
                app:vup_tips="请上传课程封面 200*200" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>