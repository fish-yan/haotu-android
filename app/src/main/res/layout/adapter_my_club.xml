<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginLeft="@dimen/dimen_20.5"
        android:layout_marginTop="@dimen/dimen_13"
        android:layout_marginBottom="@dimen/dimen_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_group_name"
        style="@style/text_15_black"
        android:layout_marginLeft="@dimen/dimen_9"
        android:layout_marginTop="5.5dp"
        app:layout_constraintLeft_toRightOf="@id/iv_header"
        app:layout_constraintTop_toTopOf="@id/iv_header"
        tools:text="某某某俱乐部群聊" />

    <TextView
        android:id="@+id/tv_grouper"
        style="@style/text_14_9D9D9D"
        android:layout_marginLeft="@dimen/dimen_9"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_header"
        app:layout_constraintLeft_toRightOf="@id/iv_header"
        tools:text="群主:火星人" />

    <View
        style="@style/divide_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>