<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <LinearLayout
        android:id="@+id/ll_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:src="@drawable/gray_back"/>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dimen_30"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/civ_avatar"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/me_ic_head"
                />
            <ImageView
                android:id="@+id/iv_bluefire"
                android:layout_toRightOf="@+id/civ_avatar"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_10"
                android:background="@drawable/blue_fire"
                />
            <LinearLayout
                android:layout_toRightOf="@+id/iv_bluefire"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_17"
                android:background="@drawable/powe_kuang"
                >

                <TextView
                    android:id="@+id/tv_batnumber"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/indicator_selected_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500"
                    />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_iconmore"/>
    </LinearLayout>
    <TextView
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dimen_5"
        android:id="@+id/tv_commname"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:text="上海羽毛球俱乐部"
        />

    <LinearLayout
         android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="@dimen/dimen_120"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_tiemhor"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="104dp"
                android:layout_height="@dimen/dimen_55"
                android:text="18:00"
                android:textSize="39dp"
                android:textColor="@color/indicator_selected_color"
                />
            <TextView
                android:id="@+id/tv_time_mone"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="88dp"
                android:layout_height="28dp"
                android:text="03月19日"
                android:textSize="@dimen/dimen_20"
                android:textColor="@color/bank_bg01"
                />
        </LinearLayout>
        <View
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gb"
            />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_activityname"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海交通大学羽毛球联谊活动"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_groupname"
                android:textSize="12dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海交通大学羽毛球俱乐部"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/dimen_14"
                    android:layout_height="@dimen/dimen_14"
                    android:background="@drawable/adree_location"
                    />
                <TextView
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:id="@+id/tv_adress"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体育馆"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/dimen_14"
                    android:layout_height="@dimen/dimen_14"
                    android:background="@drawable/ower_icon"
                    />
                <TextView
                    android:id="@+id/tv_owername"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赵老师"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


