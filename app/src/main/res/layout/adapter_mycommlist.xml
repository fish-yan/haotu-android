<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/actionitem"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <LinearLayout
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shap_conner_whit"
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
            android:id="@+id/cv_commhead"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/me_ic_head"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="sfsadff"
            />
        <ImageView
            android:id="@+id/iv_grouptype"
            android:layout_width="@dimen/dimen_15"
            android:layout_height="@dimen/dimen_15"
            android:background="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_10"
            />
    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="5dp"-->
        <!--android:background="@color/gb"-->
        <!--/>-->
</LinearLayout>