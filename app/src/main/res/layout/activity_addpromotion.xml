<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_left_title_bar"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:paddingLeft="19dp"
            android:src="@drawable/gray_back"/>
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="新增优惠券"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="历史保单"
            android:textColor="@color/indicator_selected_color"
            android:textSize="14sp"/>
        <!--<ImageView-->
            <!--android:layout_centerVertical="true"-->
            <!--android:id="@+id/iv_right_title_bar"-->
            <!--android:layout_width="@dimen/dimen_22"-->
            <!--android:layout_height="@dimen/dimen_22"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:paddingLeft="15dp"-->
            <!--android:layout_marginRight="@dimen/dimen_10"-->
            <!--android:background="@drawable/cicler_add"-->
            <!--android:paddingRight="20dp"/>-->
        <ImageView
        android:id="@+id/iv_right_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"/>
        <View
            android:id="@+id/v_divide"
            style="@style/divide_line"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>
    </RelativeLayout>


    <View
        android:background="@color/gwhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俱乐部名称："
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/et_money"
            android:inputType="number"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入优惠券金额"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/arrow_left"-->
            <!--/>-->
    </LinearLayout>

    <View
        android:background="@color/gwhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俱乐部名称："
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_selecttime"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择优惠券有效期"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/arrow_left"-->
            <!--/>-->
    </LinearLayout>

    <View
        android:background="@color/gwhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俱乐部名称："
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:text="现金券"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择优惠券类型"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left"
            />
    </LinearLayout>

    <View
        android:background="@color/gwhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_choiceclub"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俱乐部名称："
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/et_rule"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入优惠券使用规则"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dimen_100"
        android:layout_height="@dimen/dimen_180"
        android:orientation="vertical"
        android:background="@color/gb"
        >
        <Button
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_upload"
            android:layout_width="@dimen/dimen_200"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="确认"
            android:background="@drawable/shape_tailor_sure"
            android:layout_marginTop="40dp"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"/>
    </LinearLayout>

</LinearLayout>