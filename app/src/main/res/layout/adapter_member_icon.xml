<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
        android:id="@+id/iv_header_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12.5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_4B4B4B"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/iv_header_icon"
        app:layout_constraintRight_toRightOf="@id/iv_header_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_header_icon" />
</android.support.constraint.ConstraintLayout>