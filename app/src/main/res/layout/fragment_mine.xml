<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/me_img"
        android:scaleType="centerCrop"/>
    <com.dmeyc.dmestoreyfm.wedgit.ReboundsScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="218dp">
                <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                    android:id="@+id/civ_avatar"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:src="@drawable/me_ic_head"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"/>
                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    tools:text=""
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="122dp"/>
                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="42.5dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/me_ic_news_white"
                    android:paddingRight="17.5dp"
                    android:paddingTop="10dp"/>
                <ImageView
                    android:id="@+id/tv_setting"
                    android:layout_width="42.5dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/me_ic_set_white"
                    android:paddingLeft="17.5dp"
                    android:paddingTop="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:orientation="horizontal"
                android:background="@color/white">
                <RelativeLayout
                    android:id="@+id/rl_like"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <com.dmeyc.dmestoreyfm.wedgit.NumberTextView
                        android:id="@+id/num_rl_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="25dp"
                        android:layout_centerHorizontal="true"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/color_adadad"
                        android:text="关注"
                        android:paddingTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/num_rl_like"/>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="44dp"
                    android:background="@color/divide_line_color"
                    android:layout_gravity="center_vertical"/>

                <RelativeLayout
                    android:id="@+id/rel_record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.dmeyc.dmestoreyfm.wedgit.NumberTextView
                        android:id="@+id/num_tv_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="25dp"
                        app:numberName="" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/num_tv_record"
                        android:paddingTop="5dp"
                        android:text="粉丝"
                        android:textColor="@color/color_adadad"
                        android:textSize="12sp" />
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="44dp"
                    android:background="@color/divide_line_color"
                    android:layout_gravity="center_vertical"/>
                <RelativeLayout
                    android:id="@+id/rl_get_praised"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.dmeyc.dmestoreyfm.wedgit.NumberTextView
                        android:id="@+id/text_get_praised"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="25dp"
                        app:numberName="" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_get_praised"
                        android:paddingTop="5dp"
                        android:text="获赞"
                        android:textColor="@color/color_adadad"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/divide_block_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="33dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/my_order"
                    android:textSize="16sp"
                    android:textColor="@color/color_1a1a1a"/>
                <TextView
                    android:id="@+id/tv_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/watch_my_order"
                    android:paddingRight="20dp"
                    android:textColor="@color/color_1a1a1a"
                    android:textSize="12sp"
                    android:drawableRight="@drawable/ic_triangle_black"
                    android:drawablePadding="15dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:background="@color/white"
                android:paddingBottom="33dp">
                <RelativeLayout
                    android:id="@+id/rel_pay_for"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:drawableTop="@drawable/me_ic_obligation"
                        android:text="@string/info_pay_for"
                        style="@style/mine_textview_order" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_wait_send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:drawableTop="@drawable/me_ic_committed"
                        android:text="@string/info_wait_send"
                        style="@style/mine_textview_order"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_wait_receive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:drawableTop="@drawable/me_ic_stay"
                        android:text="@string/info_wait_recieve"
                        style="@style/mine_textview_order" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_wait_evaluate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:drawableTop="@drawable/me_ic_evaluate"
                        android:text="@string/info_wait_evaluate"
                        style="@style/mine_textview_order" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_after_sale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:drawableTop="@drawable/me_ic_after_sale"
                        android:text="@string/info_after_sale"
                        style="@style/mine_textview_order"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/divide_block_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="33dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/my_sever"
                    android:textSize="16sp"
                    android:textColor="@color/color_1a1a1a"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/dimen_20">
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_my_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_dianping"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:src="@drawable/me_ic_comment_black"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_below="@+id/img_dianping"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="我的点评"
                        android:textSize="12sp"
                        android:textColor="@color/color_1a1a1a"/>
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rel_my_like"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_wodexihuan"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:src="@drawable/me_ic_zan_black"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_below="@+id/img_wodexihuan"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="我的喜欢"
                        android:textSize="12sp"
                        android:textColor="@color/color_1a1a1a"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tv_attention"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_xinyuandan"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:src="@drawable/me_ic_wish_black"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_below="@+id/img_xinyuandan"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="心愿单"
                        android:textSize="12sp"
                        android:textColor="@color/color_1a1a1a"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tv_invate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:src="@drawable/me_ic_invite_black"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_below="@+id/img_share"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="分享"
                        android:textSize="12sp"
                        android:textColor="@color/color_1a1a1a"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tv_address_manager"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_address"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:src="@drawable/me_ic_site_black"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_below="@+id/img_address"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="管理地址"
                        android:textSize="12sp"
                        android:textColor="@color/color_1a1a1a"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/kefu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_kufu"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:src="@drawable/me_ic_service_black"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_below="@+id/img_kufu"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="平台客服"
                        android:textSize="12sp"
                        android:textColor="@color/color_1a1a1a"/>
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rel_conpons"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_wodekaquan"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:src="@drawable/me_ic_coupon_black"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_below="@+id/img_wodekaquan"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="我的卡劵"
                        android:textSize="12sp"
                        android:textColor="@color/color_1a1a1a"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="33dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/divide_block_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="33dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="为你推荐"
                    android:textSize="16sp"
                    android:textColor="@color/color_1a1a1a"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:paddingLeft="@dimen/dimen_15"
                    android:paddingTop="@dimen/dimen_10"
                    android:paddingBottom="@dimen/dimen_10"
                    android:background="@color/white"
                    android:id="@+id/main_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </LinearLayout>
    </com.dmeyc.dmestoreyfm.wedgit.ReboundsScrollView>
</FrameLayout>