<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/base_title_bar"
        android:visibility="gone"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_foot">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="390dp"
                    />
                <LinearLayout
                    android:layout_margin="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="完成"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_screen_black"
                        android:layout_gravity="right"
                        />
                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_introduction_avatar"
                    android:layout_width="@dimen/dimen_35"
                    android:layout_height="@dimen/dimen_35"
                    app:riv_corner_radius="31dp"
                    android:src="@drawable/me_ic_head"/>
                <TextView
                    android:id="@+id/tv_introduction_brandName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_1a1a1a"
                    tools:text="jockie"
                    android:layout_marginLeft="17dp"/>
                <TextView
                    android:id="@+id/tv_introduction_follow"
                    android:layout_width="58dp"
                    android:layout_height="27dp"
                    android:text="+关注"
                    android:textSize="13sp"
                    android:textColor="@color/indicator_selected_color"
                    android:gravity="center"
                    android:background="@drawable/shape_14radius_fd7e18"/>
            </LinearLayout>
            <View
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/indicator_normal_color"/>
            <TextView
                android:id="@+id/text_context"
                android:layout_margin="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="context"
                android:textColor="@color/color_1a1a1a"
                android:textSize="15sp"/>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/main_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_above="@+id/ll_foot"
        android:background="@color/white"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/color_1a1a1a">
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_like"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_like_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:gravity="center"
                android:text="赞"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_comment"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_store"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_comment_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_canBuy"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_canBuy"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_bag_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:gravity="center"
                android:text="可购买商品"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>