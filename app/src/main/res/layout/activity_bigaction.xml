<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/big_post"
    android:layout_height="match_parent">
    <View
        android:visibility="gone"
        android:background="@color/indicator_selected_color"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <!--android:background="@color/white"-->
    <RelativeLayout
        android:layout_below="@+id/status_view"
        android:id="@+id/rl_info"

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <!--?attr/actionBarSize-->
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gray_back"/>
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>
        <TextView
            android:text=""
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <ImageView
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_iconmore"/>
        <ImageView
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_shopcar"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:background="@drawable/mess_icon"/>
        <View
            android:id="@+id/v_divide"
            style="@style/divide_line"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>
    </RelativeLayout>
    <!--android:background="@drawable/shap_white_littleconner"-->
    <com.dmeyc.dmestoreyfm.wedgit.ReboundsScrollView

        android:layout_above="@+id/ll_boteom"
        android:layout_below="@+id/rl_info"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">




        </LinearLayout>
    </com.dmeyc.dmestoreyfm.wedgit.ReboundsScrollView>

    <LinearLayout
        android:id="@+id/ll_boteom"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55"

        >
        <!--android:background="@color/gb"-->
        <Button

            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"

            android:background="@drawable/tobaoming_but"
            android:layout_marginRight="@dimen/dimen_80"
            android:layout_marginLeft="@dimen/dimen_80"/>
        <!--android:text="立即报名"-->
        <!--android:background="@drawable/shape_tailor_sure"-->
    </LinearLayout>
