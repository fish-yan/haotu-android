<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_root">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/white">
        <CheckBox
            android:id="@+id/cb_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"

            android:button="@drawable/checkbox"
            android:checked="true"/>
        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMP服饰"
            android:textColor="@color/home_lab"
            android:drawableRight="@drawable/icon_more"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/item_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_333333"
            android:text="@string/edit"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <CheckBox
            android:id="@+id/cb_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:button="@drawable/checkbox"
            android:checked="true"/>
        <ImageView
            android:id="@+id/iv_des"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop" />
        <RelativeLayout
            android:id="@+id/rel_content"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="枪领斜开袋 透气弹力套西"
                android:textColor="@color/color_333333"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="46A, 29"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="¥ 8888"
                android:textSize="18sp"
                android:textColor="#ee1111"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.dmeyc.dmestoreyfm.wedgit.AmountView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <FrameLayout
                android:id="@+id/fl_delete"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#ae11"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_search_delete"/>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>