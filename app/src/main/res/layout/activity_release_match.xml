<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入赛事主题"
                app:civ_type="2" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入赛事时间"
                app:civ_type="8" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请输入赛事地点"
                app:civ_type="2" />

            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请选择赛事类型"
                app:civ_type="8" />
            <com.dmeyc.dmestoreyfm.wedgit.CustomItemView
                android:id="@+id/civ_anchor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_left_hint_str="请选择主播"
                app:civ_right_hint_str="非必填"
                app:civ_type="12" />

            <com.dmeyc.dmestoreyfm.wedgit.UploadPictureView
                android:id="@+id/uploadPictureView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_404040"
                app:vup_tips="请上传活动海报 大小以内" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>