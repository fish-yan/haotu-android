<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_left_title_bar"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:paddingLeft="19dp"
            android:src="@drawable/gray_back"/>
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="个人信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/dimen_17"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="明细"
            android:background="@color/indicator_selected_color"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"/>
        <View
            android:id="@+id/v_divide"
            style="@style/divide_line"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="@color/gb"
        />
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_personinfro"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="头像"
            android:textSize="@dimen/dimen_17"
            android:textColor="@color/black"
            />
<com.dmeyc.dmestoreyfm.wedgit.CircleImageView
    android:id="@+id/cv_personheader"
    android:layout_gravity="center_vertical"
    android:layout_width="@dimen/dimen_50"
    android:layout_height="@dimen/dimen_50"
    android:background="@drawable/me_ic_head"
    android:layout_marginRight="@dimen/dimen_10"
    />
        <ImageView
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:background="@drawable/mine_arrow"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/gb"
        />
    <LinearLayout
        android:id="@+id/ll_nickname"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="昵称"
            android:textSize="@dimen/dimen_17"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_nickname"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:text="HOU.T001"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_10"
            android:textColor="@color/textgraycolor"
            />
        <ImageView
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:background="@drawable/mine_arrow"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/gb"
        />
    <LinearLayout
        android:id="@+id/ll_sex_seting"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="性别"
            android:textSize="@dimen/dimen_17"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/tv_sex"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:text="HOU.T001"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_10"
            android:textColor="@color/textgraycolor"
            />
        <ImageView
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:background="@drawable/mine_arrow"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/gb"
        />
    <LinearLayout
        android:id="@+id/ll_bithday"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="生日"
            android:textSize="@dimen/dimen_17"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_birthday"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:text="HOU.T001"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_10"
            android:textColor="@color/textgraycolor"
            />
        <ImageView
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:background="@drawable/mine_arrow"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_outlog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/shap_conner_orange"
        android:gravity="center"
        android:text="退出当前账号"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18" />
</LinearLayout>