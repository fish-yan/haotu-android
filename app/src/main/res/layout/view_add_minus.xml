<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_minus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="11dp"
        android:layout_height="2dp"
        android:src="@drawable/icon_minus"
        app:layout_constraintBottom_toBottomOf="@id/view_minus"
        app:layout_constraintLeft_toLeftOf="@+id/view_minus"
        app:layout_constraintTop_toTopOf="@id/view_minus" />

    <View
        android:id="@+id/view_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/icon_add_black"
        app:layout_constraintBottom_toBottomOf="@id/view_add"
        app:layout_constraintRight_toRightOf="@+id/view_add"
        app:layout_constraintTop_toTopOf="@id/view_add" />

    <EditText
        android:textCursorDrawable="@null"
        android:id="@+id/et_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="20dp"
        android:textColor="@color/color_FF5F5F"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/view_minus"
        app:layout_constraintRight_toLeftOf="@id/view_add"
        app:layout_constraintTop_toTopOf="parent"
        android:text="0" />
</android.support.constraint.ConstraintLayout>