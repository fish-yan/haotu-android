                    android:gravity="center_vertical"
                    android:text="18:00"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@color/gray"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
