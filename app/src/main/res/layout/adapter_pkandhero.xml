                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/indicator_selected_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="NIKE赞助"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                    android:id="@+id/iv_teamtwo"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/pk_who"
                    />
                <TextView
                    android:id="@+id/tv_teantwonaem"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="飞翔羽毛球俱乐部"
                    />
                <TextView
                    android:id="@+id/tv_teantwoperson"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20人"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>


