<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <!--?attr/actionBarSize-->
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gray_back"/>
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>
        <TextView
            android:text="上传相关资质"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_20" />
        <TextView
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:textColor="@color/indicator_selected_color"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="20dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="@color/gb"
        />
    <com.dmeyc.dmestoreyfm.wedgit.ReboundsScrollView
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        android:background="@drawable/shap_white_littleconner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:background="@drawable/shap_whit"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                >
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ll_certificate"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="190dp"
                    android:layout_height="131dp"
                    android:background="@drawable/commpfan"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传职业证书"
                    android:textColor="#E3E7F7"
                    android:textSize="@dimen/dimen_16"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ll_certificate"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_5"
                android:background="@color/gb"
                />
            <RelativeLayout
                android:background="@drawable/shap_whit"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                >
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ll_front"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="190dp"
                    android:layout_height="131dp"
                    android:background="@drawable/comper_zheng"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传经营人身份证正面"
                    android:textColor="#E3E7F7"
                    android:textSize="@dimen/dimen_16"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ll_front"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_5"
                android:background="@color/gb"
                />
            <RelativeLayout
                android:background="@drawable/shap_whit"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                >
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ll_revers"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="190dp"
                    android:layout_height="131dp"
                    android:background="@drawable/commpfan"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传经营人身份证反面"
                    android:textColor="#E3E7F7"
                    android:textSize="@dimen/dimen_16"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ll_revers"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:orientation="vertical"
                android:background="@color/gb"
                >
                <Button
                    android:id="@+id/submit"
                    android:layout_marginBottom="20dp"
                    android:layout_width="@dimen/dimen_180"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:text="确认，提交申请"
                    android:alpha="0.5"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_tailor_sure"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"/>
            </LinearLayout>
        </LinearLayout>
    </com.dmeyc.dmestoreyfm.wedgit.ReboundsScrollView>
</LinearLayout>