<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_top_bg"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:background="@drawable/icon_person_detail_top"
        app:layout_constraintTop_toTopOf="parent" />

    <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
        android:id="@+id/civ_header"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="124dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/icon_vip"
        app:layout_constraintBottom_toBottomOf="@+id/civ_header"
        app:layout_constraintEnd_toEndOf="@+id/civ_header" />

    <TextView
        android:id="@+id/tv_person_name"
        style="@style/text_15_black"
        android:layout_marginLeft="14.5dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_9A6500"
        app:layout_constraintLeft_toRightOf="@id/civ_header"
        app:layout_constraintTop_toBottomOf="@id/iv_top_bg"
        tools:text="好兔官方" />

    <TextView
        android:id="@+id/tv_edit_content"
        style="@style/text_15_black"
        android:layout_marginLeft="14.5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="编辑资料"
        android:textColor="@color/color_4B4B4B"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_top_bg" />

    <TextView
        android:id="@+id/tv_follow_status"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_marginTop="10.5dp"
        android:layout_marginRight="16dp"
        android:background="@color/red"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_top_bg"
        android:text="关注" />

    <TextView
        android:id="@+id/tv_praise"
        style="@style/text_15_black"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21.5dp"
        android:textSize="13.5sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civ_header"
        tools:text="8000W" />

    <TextView

        android:id="@+id/tv_praise_title"
        style="@style/text_15_black"
        android:layout_marginLeft="6dp"
        android:text="点赞"
        android:textColor="@color/color_CECECE"
        app:layout_constraintBottom_toBottomOf="@id/tv_praise"
        app:layout_constraintLeft_toRightOf="@id/tv_praise" />

    <TextView
        android:id="@+id/tv_follow"
        style="@style/text_15_black"
        android:layout_marginLeft="15dp"
        android:textSize="13.5sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_praise"
        app:layout_constraintLeft_toRightOf="@id/tv_praise_title"
        tools:text="5" />

    <TextView
        android:id="@+id/tv_follow_title"
        style="@style/text_15_black"
        android:layout_marginLeft="6dp"
        android:text="关注"
        android:textColor="@color/color_CECECE"
        app:layout_constraintBottom_toBottomOf="@id/tv_praise"
        app:layout_constraintLeft_toRightOf="@id/tv_follow" />

    <TextView
        android:id="@+id/tv_like"
        style="@style/text_15_black"
        android:layout_marginLeft="15dp"
        android:textSize="13.5sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_praise"
        app:layout_constraintLeft_toRightOf="@id/tv_follow_title"
        tools:text="7000W" />

    <TextView
        android:id="@+id/tv_like_title"
        style="@style/text_15_black"
        android:layout_marginLeft="6dp"
        android:text="粉丝"
        android:textColor="@color/color_CECECE"
        app:layout_constraintBottom_toBottomOf="@id/tv_praise"
        app:layout_constraintLeft_toRightOf="@id/tv_like" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_praise" />

    <TextView
        android:id="@+id/tv_person_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ta暂时还没想到个性签名"
        android:paddingLeft="16dp"
        android:paddingTop="12.5dp"
        android:paddingRight="16dp"
        android:paddingBottom="12.5dp"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_person_instruction" />
</android.support.constraint.ConstraintLayout>