<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gray_back"/>
        <!--android:src="@drawable/ic_return_black"-->
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="关于好兔"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="明细"
            android:background="@color/indicator_selected_color"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"/>
        <View
            android:id="@+id/v_divide"
            style="@style/divide_line"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>
    </RelativeLayout>
    <com.dmeyc.dmestoreyfm.wedgit.RoundAngleImageView
        android:visibility="gone"
        android:layout_width="67dp"
        android:layout_marginTop="@dimen/dimen_100"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:background="@drawable/yfm_rabitlogo"
        />
    <TextView
        android:visibility="gone"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="好兔 HOT.U"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_viewversion"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Version  1.01"
        />
    <View
        android:background="@color/gb"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
        <TextView
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dimen_17"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70"
            android:text="去评分"
            android:drawableRight="@drawable/arrow_left"
            />

    <View
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginLeft="20dp"
        android:background="@color/gb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <TextView
        android:background="@color/white"
        android:id="@+id/tv_reviewstome"
        android:drawableRight="@drawable/arrow_left"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/dimen_17"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:text="投诉"
        />
    <View
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginLeft="20dp"
        android:background="@color/gb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <TextView
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/dimen_17"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:text="版本更新"
        android:drawableRight="@drawable/arrow_left"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/tv_service"
        android:textColor="@color/indicator_selected_color"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_12"
        android:text="《HOT.U软件许可及服务协议》"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_50"
        />
        <TextView
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:layout_marginBottom="@dimen/dimen_50"
            />
        <TextView
            android:id="@+id/tv_secrece"
            android:textColor="@color/indicator_selected_color"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_12"
            android:text="《HOT.U隐私保护协议》"
            android:layout_marginBottom="@dimen/dimen_50"
            />
    </LinearLayout>
</LinearLayout>