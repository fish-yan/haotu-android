<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gray_back"/>
        <!--android:src="@drawable/ic_return_black"-->
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="手机号快捷登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="明细"
            android:background="@color/indicator_selected_color"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"/>
        <View
            android:id="@+id/v_divide"
            style="@style/divide_line"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/dimen_150"
        android:id="@+id/rl_log_phoneshap"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <!--<ImageView-->
            <!--android:id="@+id/iv_log_chephone"-->
            <!--android:background="@drawable/log_phoneuncheck"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--/>-->
        <EditText
            android:layout_weight="1"
            android:textColor="@color/indicator_selected_color"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入您的手机号"
            android:id="@+id/et_phone"
            android:textColorHint="#DFE0E1"
            android:layout_toRightOf="@+id/iv_log_chephone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/dimen_18"
            android:background="@null" />

        <com.dmeyc.dmestoreyfm.wedgit.TimerTaskTextView
            android:id="@+id/timertasktextview"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/shap_conner_orange"/>
    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_30"
        android:background="@color/gb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        />
    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="82dp"
        android:layout_toRightOf="@+id/iv_log_chephone"
        android:background="@null"
        android:hint="请输入验证码"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/indicator_selected_color"
        android:textColorHint="#DFE0E1"
        android:textSize="@dimen/dimen_18" />
    <View
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_30"
        android:background="@color/gb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        />
    <Button
        android:clickable="false"
        android:alpha="0.5"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_regist"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_40"
        android:textColor="@color/white"
        android:text="登录"
        android:background="@drawable/shape_tailor_sure"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
</LinearLayout>