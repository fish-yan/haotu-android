                    android:id="@+id/et_commcode"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请填写税人识别码"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
