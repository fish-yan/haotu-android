<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/ll_actionitem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_110"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/tv_week"
        android:layout_marginLeft="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周一"
        />
    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_actiontime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:text="2019-06-21"
       android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dimen_10"
        />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_ispk"
            android:layout_gravity="center"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_20"
            android:background="@drawable/pk_icon"
            android:layout_marginRight="@dimen/dimen_10"
            />
        <ImageView
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_intrance"
            android:layout_width="@dimen/dimen_15"
            android:layout_height="@dimen/dimen_15"
            android:background="@drawable/introduce"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gb"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
            android:id="@+id/cv_header"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/me_ic_head"
            android:layout_marginLeft="@dimen/dimen_10"
            />
                    <LinearLayout

                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                        <TextView
                            android:id="@+id/tv_actionclub"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/dimen_150"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:maxWidth="@dimen/dimen_150"
                            android:text="爱丽丝羽毛球俱乐部"
                            android:textColor="@color/black"
                            />
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_machstate"
                                android:paddingLeft="@dimen/dimen_5"
                                android:paddingRight="@dimen/dimen_5"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@drawable/shap_red_cilce"
                                android:layout_marginRight="@dimen/dimen_5"
                                android:layout_width="@dimen/dimen_60"
                                android:layout_height="wrap_content"
                                android:text="16进8"
                                />
                            <!--<ImageView-->
                                <!--android:id="@+id/iv_ispk"-->
                                <!--android:layout_gravity="center"-->
                                <!--android:layout_width="@dimen/dimen_25"-->
                                <!--android:layout_height="@dimen/dimen_20"-->
                                <!--android:background="@drawable/pk_icon"-->
                                <!--android:layout_marginRight="@dimen/dimen_10"-->
                                <!--/>-->
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:background="@drawable/adree_location"
                                />
                        <TextView
                            android:id="@+id/tv_adress"
                        android:layout_marginLeft="@dimen/dimen_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="爱丽丝羽毛球俱乐部"
                            />
                        </LinearLayout>
                    </LinearLayout>
<LinearLayout
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_sokin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@drawable/shap_check"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:text="比分录入"
        android:textSize="@dimen/dimen_10"
        android:textColor="@color/indicator_selected_color" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_changeaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@drawable/shap_check"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:text="修改活动"
        android:textSize="@dimen/dimen_10"
        android:textColor="@color/indicator_selected_color" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_changeoragnalaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@drawable/shap_check"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:text="修改活动"
        android:textSize="@dimen/dimen_10"
        android:textColor="@color/indicator_selected_color" />
    <TextView
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5"
        android:id="@+id/tv_changeset"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:background="@drawable/shap_check"
        android:textColor="@color/indicator_selected_color"
        android:layout_marginRight="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调整座位"
        android:textSize="@dimen/dimen_10"
        />

        <TextView
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_5"
            android:id="@+id/tv_result"
            android:paddingLeft="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_5"
            android:paddingRight="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:background="@drawable/shap_check"
            android:textColor="@color/indicator_selected_color"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看成绩"
            android:textSize="@dimen/dimen_10"
            />
    <TextView
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5"
        android:id="@+id/tv_startaction"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:background="@drawable/shap_check"
        android:textColor="@color/indicator_selected_color"
        android:layout_marginRight="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启活动"
        android:textSize="@dimen/dimen_10"
        />
    <TextView
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5"
        android:id="@+id/tv_stopaction"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:background="@drawable/shap_check"
        android:textColor="@color/indicator_selected_color"
        android:layout_marginRight="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停活动"
        android:textSize="@dimen/dimen_10"
        />
    <TextView
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5"
        android:id="@+id/tv_cancleaction"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:background="@drawable/shap_check"
        android:textColor="@color/indicator_selected_color"
        android:layout_marginRight="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消活动"
        android:textSize="@dimen/dimen_10"
        />
</LinearLayout>
    </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gb"
        />
</LinearLayout>