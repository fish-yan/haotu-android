<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/text_15_black"
        android:layout_marginLeft="13dp"
        app:layout_constraintStart_toEndOf="@+id/iv_header"
        app:layout_constraintTop_toTopOf="@+id/iv_header"
        tools:text="好兔官方" />

    <TextView
        android:id="@+id/tv_account"
        style="@style/text_14_9D9D9D"
        android:layout_height="11dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/color_9A6500"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="好兔号：" />

    <TextView
        android:id="@+id/tv_funs_count"
        style="@style/text_14_9D9D9D"
        android:textColor="@color/color_9A6500"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_account"
        tools:text="粉丝: 100w" />

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:background="@color/red"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="关注" />

    <View
        style="@style/divide_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>