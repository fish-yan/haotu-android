<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:visibility="gone"
        android:background="@color/indicator_selected_color"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:background="@color/indicator_selected_color"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_return_black"/>
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_title"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="14dp"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text=""
            android:background="@color/indicator_selected_color"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <ImageView
        android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_iconmore"/>
        <!--<ImageView-->
            <!--android:id="@+id/iv_right_title_bar"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:paddingLeft="15dp"-->
            <!--android:paddingRight="20dp"/>-->
        <View
            android:id="@+id/v_divide"
            style="@style/divide_line"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/indicator_selected_color">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                android:id="@+id/iv_teamone"
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:background="@drawable/me_ic_head"
                />
            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:maxWidth="@dimen/dimen_80"
                android:id="@+id/tv_teamonename"
                android:textSize="@dimen/dimen_12"
               android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="中羽联"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/tv_sorcker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 ：0"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_30" />
            <TextView
                android:layout_marginTop="@dimen/dimen_10"
                android:id="@+id/tv_time_state"
                android:textSize="@dimen/dimen_10"
                android:gravity="bottom"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30"
                android:text="5月29日   进行中"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_suppoutname"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="男女单打第二轮"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_10" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <com.dmeyc.dmestoreyfm.wedgit.CircleImageView
                android:id="@+id/iv_teamtwo"
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:background="@drawable/me_ic_head"
                />
            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:maxWidth="@dimen/dimen_80"
                android:textColor="@color/white"
                android:id="@+id/tv_teantwonaem"
                android:textSize="@dimen/dimen_12"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="好图"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlPrimaryColor="#afff"
        app:srlAccentColor="@color/color_1a1a1a"
        app:srlEnableLoadmore="true"
        app:srlEnableHeaderTranslationContent="true"
        >
        <com.scwang.smartrefresh.header.StoreHouseHeader
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:shhText="HOT.U"
            app:shhLineWidth="2dp"/>
        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:background="@color/gb"-->
        <!--android:id="@+id/recycleview_pking"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars="none"/>-->
        <ListView
            android:scrollbars="none"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_pkinglist"
            />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>