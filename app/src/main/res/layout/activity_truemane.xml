<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:layout_below="@+id/status_view"
        android:id="@+id/tl_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gray_back"/>
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="实名认证"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="明细"
            android:background="@color/indicator_selected_color"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"/>
        <View
            android:id="@+id/v_divide"
            style="@style/divide_line"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_space"
        android:layout_below="@+id/tl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="@color/gb"
        />
    <com.dmeyc.dmestoreyfm.wedgit.ReboundsScrollView
        android:background="@drawable/shap_white_littleconner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">
    <LinearLayout
        android:background="@color/white"
        android:layout_height="@dimen/dimen_70"
        android:layout_width="match_parent"
       android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保险期限："
            android:textSize="@dimen/dimen_13"
            />
<TextView
    android:layout_marginTop="@dimen/dimen_14"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:textSize="@dimen/dimen_14"
    android:text="本保险紧保障您在参加活动期间有效，活动\n结束后发生任何意外保单不支持申请理赔。"

    />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:background="@color/white"
        >
        <TextView
            android:textSize="@dimen/dimen_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被保人要求: "
            android:layout_marginLeft="@dimen/dimen_10"
            />
    <TextView
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:text="限6-65岁中国公民(不含港澳台)"
        android:textSize="@dimen/dimen_14"
        />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_height="@dimen/dimen_70"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投保人要求："
            android:textSize="@dimen/dimen_13"
            />
        <TextView
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dimen_14"
            android:text="限18周岁及以上具有完全行为能力的中国公\n民(不含港澳台)"
            />
    </LinearLayout>
<TextView
    android:textColor="#FF5151"
    android:paddingLeft="@dimen/dimen_10"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120"
    android:text="温馨提示：\n1.为了保障顺利投保，请务必提供您的真实信息，好兔将严格\n保密，请放心填写\n2.保险只保障指定时间内活动风险，若不同时间参加活动，可再次进行购买 "
    android:background="@color/white"
    android:paddingRight="@dimen/dimen_10"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/gb"
        />
    <EditText
        android:id="@+id/et_turename"
        android:paddingLeft="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:background="@color/white"
        android:hint="请输入被保人姓名"
        android:textColorHint="#DFE0E1"
        />
    <EditText
        android:inputType="number"
        android:id="@+id/et_idenitycode"
        android:paddingLeft="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:background="@color/white"
        android:hint="请输入被保人身份证号"
        android:textColorHint="#DFE0E1"
        />
            <EditText
                android:maxLength="11"
                android:inputType="number"
                android:id="@+id/et_phone"
                android:layout_marginTop="@dimen/dimen_1"
                android:paddingLeft="@dimen/dimen_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70"
                android:hint="请输入您的手机号"
                android:textColorHint="#DFE0E1"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70"
                android:orientation="horizontal"
                >
                <EditText
                    android:maxLength="6"
                    android:inputType="number"
                    android:id="@+id/et_code"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dimen_10"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70"
                    android:hint="请输入您的验证码"
                    android:textColorHint="#DFE0E1"
                    />
                <com.dmeyc.dmestoreyfm.wedgit.TimerTaskTextView
                    android:id="@+id/timertasktextview"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="获取验证码"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shap_graycircle"
                    />
                <!--android:background="@drawable/shap_conner_orange"-->
            </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox

                android:layout_marginLeft="@dimen/dimen_10"
                style="@style/CustomCheckBoxTheme"
                android:id="@+id/cb_agree"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8A8A8A"
                android:text="我已同意并阅读好兔群主责任险"
                />
            <TextView
                android:id="@+id/tv_tiaokuan"
                android:textColor="@color/indicator_selected_color"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《保险条款》"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_regist"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_40"
        android:textColor="@color/white"
        android:text="确认"
        android:background="@drawable/shape_tailor_sure" />
        </LinearLayout>
    </com.dmeyc.dmestoreyfm.wedgit.ReboundsScrollView>
</LinearLayout>