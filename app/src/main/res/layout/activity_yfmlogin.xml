<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <View
        android:background="@color/white"
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_left_title_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_return_black"/>
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_17"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="明细"
            android:background="@color/indicator_selected_color"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"/>
        <View
            android:id="@+id/v_divide"
            style="@style/divide_line"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_log_phoneshap"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/shap_loguncheck"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >
    <ImageView
        android:id="@+id/iv_log_chephone"
        android:background="@drawable/phone_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
       android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:textColor="@color/indicator_selected_color"
        android:maxLength="11"
        android:hint="请输入您的手机号"
        android:id="@+id/et_phone"
        android:inputType="number"
        android:layout_toRightOf="@+id/iv_log_chephone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:background="@null" />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_log_passshap"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shap_check"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:id="@+id/iv_log_chepass"
            android:background="@drawable/pass_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:textColor="@color/indicator_selected_color"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="请输入您的密码"
            android:id="@+id/et_pass"
            android:layout_toRightOf="@+id/iv_log_chepass"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            />
    </RelativeLayout>
<TextView
    android:id="@+id/tv_forget_psw"
    android:layout_marginRight="40dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="right"
    android:gravity="right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="忘记密码?"
     android:textColor="@color/indicator_selected_color"
    />
    <Button
        android:alpha="0.5"
        android:clickable="false"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:text="登录"
        android:background="@drawable/shape_tailor_sure"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_20"/>
    <Button
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:id="@+id/btn_regist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:text="注册"
        android:background="@drawable/shape_tailor_sure"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_20"/>


    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
           android:layout_height="1dp"
            android:background="@color/gb"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="使用三方登录"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gb"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <ImageView
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:src="@drawable/qq_logicon"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_40"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv_weixin"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:src="@drawable/wx_logicon"/>
            <ImageView
                android:id="@+id/iv_phonelogin"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_55"
                android:layout_height="@dimen/dimen_55"
                android:src="@drawable/phone_login"/>
            <ImageView
                android:id="@+id/iv_qq"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_55"
                android:layout_height="@dimen/dimen_55"
                android:src="@drawable/qq_logicon"/>
        </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_weibo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_weibo"/>
    </LinearLayout>
</LinearLayout>