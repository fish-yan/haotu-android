<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shap_timewhite"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:text="时间选择"
         android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/dimen_20"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/gb"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    >
    <com.dmeyc.dmestoreyfm.wedgit.AccountTimePicker
        android:id="@+id/pv_year"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="200dp"/>
    <com.dmeyc.dmestoreyfm.wedgit.AccountTimePicker
        android:id="@+id/pv_mone"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="200dp"/>
</LinearLayout>

    <TextView
        android:id="@+id/tv_outlog"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_tailor_sure"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_12" />
</LinearLayout>