<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_pageritem"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gb"
        />
    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_10"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_15"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_15"
                android:background="@drawable/adree_location"
                />
            <TextView
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/tv_adress"
                android:textSize="14dp"
                android:textColor="@color/gray"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点：上海市闵行区"
                />
            <TextView
                android:id="@+id/tv_destance"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="12m"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_15"
            android:layout_width="match_parent"
            >

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_15"
                android:background="@drawable/action_timeicon"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_pktime"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 18:00-20:00"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_gravity="center_vertical"
                android:id="@+id/rv_member"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_15"
                />
            <LinearLayout
                android:id="@+id/ll_mumberitem"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
               android:id="@+id/personcountin"
                android:layout_gravity="center_vertical"
                android:textColor="@color/indicator_selected_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04"
                />
            <TextView
                android:id="@+id/tv_persontal"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray_deep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/20"
                />
            </LinearLayout>
        </LinearLayout>
      </LinearLayout>

</LinearLayout>