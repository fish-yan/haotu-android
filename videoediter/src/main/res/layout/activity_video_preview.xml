<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="contentDescription">

    <com.tencent.liteav.demo.videoediter.common.videopreview.TCVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/record_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_record_start"
        android:onClick="onClick"/>


    <!--录制完成-->
    <RelativeLayout
        android:id="@+id/publishLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:id="@+id/record_delete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="#8B8B7A"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="@dimen/live_iv_size"
                android:layout_height="@dimen/live_iv_size"
                android:background="@drawable/icon_record_delete"
                android:layout_alignParentTop="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/record_download"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="#FF7256"
                android:layout_marginRight="20dp"
                >
                <ImageView
                    android:layout_width="@dimen/live_iv_size"
                    android:layout_height="@dimen/live_iv_size"
                    android:background="@drawable/icon_record_download"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一步"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/record_to_edit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:onClick="onClick"
                android:background="#000000"
                android:gravity="center"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="@dimen/live_iv_size"
                    android:layout_height="@dimen/live_iv_size"
                    android:layout_centerInParent="true"
                    android:background="@drawable/selector_preview_to_edit"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/publishLayout"
        android:layout_gravity="center|right"
        android:layout_marginBottom="15dp"
        android:max="0"
        android:maxHeight="2.0dip"
        android:minHeight="2.0dip"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:progress="0"
        android:progressDrawable="@drawable/play_seekbar_progress"
        android:thumb="@drawable/play_seekbar_icon"/>

    <TextView
        android:id="@+id/progress_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="25dp"
        android:text="00:00/00:00"
        android:textColor="@color/c8"
        android:textSize="@dimen/h6"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Button" />
</RelativeLayout>